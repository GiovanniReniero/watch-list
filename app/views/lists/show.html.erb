<div class="container">
    <h1> <%= "#{@list.genere}" %></h1> 
    <% @movies = @list.movies %>
    <% @bookmarks = @list.bookmarks %>
  <div class="d-flex justify-content-around">
    <% @bookmarks.each do |bookmark| %>
    
      <% @movie = bookmark.movie %>
        <div class="card" style="width: 18rem;">
          <%= image_tag "#{@movie.poster_url}", class: "card-img-top"  %>
          <div class="card-body">
            <h5 class="card-title"> <%= " #{@movie.title}" %>  </h5>
            <p class="card-text">  <%= "OVERVIEW: #{@movie.overview}" %>    </ p>
            <p class="card-text">  <%= "COMMENT: #{bookmark.comment}" %>    </ p>
          </div>
          <br>
        </div>
      <% end %>
    
  </div>

  <a> <%= link_to "Add an entry to the '#{@list.genere}' genere",         new_list_bookmark_path(@list), class: "btn btn-outline-success fs-6         fw-bold  border-3"  %>  </a>

  <a> <%= link_to "Back to Generes", lists_path, class: "btn btn-outline-warning fs-6 fw-bold  border-3"%></a>
  <br>
      
 
</div>
    
    






