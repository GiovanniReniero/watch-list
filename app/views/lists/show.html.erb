<div class="container">
  <h5>This is the List show page</h5>
<div>



</div>  
  <h1> <%= "#{@list.genere}" %> </h1>
  <% @movies = @list.movies %>
  <% @bookmarks = @list.bookmarks %>
  <% @bookmarks.each do |bookmark|  %>
    <% @movie = bookmark.movie %>
    <h4> <strong> <%= " #{@movie.title}" %> </strong></h4> 
    <h5> <%= "OVERVIEW: #{@movie.overview}" %></h5> 
    <h5> <%= "COMMENTS: #{bookmark.comment} "%> </h5>
  <% end %>
<br>


<a> <%= link_to "Add an entry to the '#{@list.genere}' genere", new_list_bookmark_path(@list), class: "btn btn-outline-success fs-6 fw-bold  border-3"  %>  </a>

<a class="btn btn-outline-warning fs-6 fw-bold  border-3" href="/lists" role="button">Back to Generes</a>
</div>
